---
const contactInfo = [
  { label: "contacto@conect-arte.mx", contact: "mailto:contacto@conect-arte.mx", icon: "mail.svg" },
  { label: "+52 (221) 123-8901", contact: "https://wa.me/522211238901", icon: "whatsapp.svg" },
];

const socialLinks = [
  { name: "Facebook", url: "https://facebook.com/tusitio", icon: "facebook.svg" },
  { name: "Twitter", url: "https://twitter.com/tusitio", icon: "twitterx.svg" },
  { name: "Instagram", url: "https://instagram.com/tusitio", icon: "instagram.svg" },
];
---

<footer class="footer">
  <div class="footer-container">

    <div class="contact-info">
      <h3>Contáctanos</h3>
      <ul class="contact-cont">
        {contactInfo.map((item) => (
          <li class="contact-item link-item">
          <a href={item.contact.replace( 'mailto:', '' )} target="_blank" rel="noopener noreferrer">
            <img src={`/icons/${item.icon}`} alt={`Icono de ${item.contact}`} />
            {item.label}
          </a>
          </li>
        ))}
      </ul>
    </div>


    <div class="social-links">
      <h3>Síguenos</h3>
      <ul class="social-cont">
        {socialLinks.map((link) => (
          <li class="social-items link-item">
            <a href={link.url} target="_blank" rel="noopener noreferrer">
              <img src={`/icons/${link.icon}`} alt={`Logo de ${link.name}`} />
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div class="copyright">
      <p>&copy; 2024 Alianza Teatral Conectarte</p>
    </div>

  </div>
</footer>

