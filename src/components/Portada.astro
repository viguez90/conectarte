---
interface Props {
  temporada: string;
}

const { temporada } = Astro.props;
---

<figure>
  <img src="/assets/portada.png" alt={`Nueva temporada: ${temporada} Obra de Teatro`}>
</figure>


<style lang="sass">
figure
  margin: 0
  padding: 0

img
  width: 1080px
  height: auto
  box-shadow: 0px 0px 30px 6px rgba(0,0,0,0.6)

@media (max-width: 1100px)
  img
    width: 800px

@media (max-width: 822px)
  img
    width: 600px

@media (max-width: 622px)
  img
    width: 400px

@media (max-width: 422px)
  img
    width: 350px

@media (max-width: 370px)
  img
    width: 300px

@media (max-width: 322px)
  img
    width: 250px
</style>
