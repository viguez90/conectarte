---
interface Props {
  temporada: string;
}

const { temporada } = Astro.props;
---

<figure>
  <img src="/assets/portada.png" alt={`Nueva temporada: ${temporada} Obra de Teatro`}>
</figure>


<style lang="sass">
figure
  margin: 0
  padding: 0

img
  width: 1080px
  height: auto
  box-shadow: 0px 0px 30px 6px rgba(0,0,0,0.6)

@media (max-width: 1100px)
  img
    width: 955px

@media (max-width: 980px)
  img
    width: 855px

@media (max-width: 880px)
  img
    width: 755px

@media (max-width: 780px)
  img
    width: 655px

@media (max-width: 680px)
  img
    width: 555px

@media (max-width: 580px)
  img
    width: 455px

@media (max-width: 480px)
  img
    width: 355px

@media (max-width: 380px)
  img
    width: 255px
</style>
