---
type MenuItem = {
  label: string;
  link: string;
};

interface menuProp {
  menuObject: MenuItem[];
};

const { menuObject } = Astro.props as menuProp;
const { imgLogo } = Astro.props;
---


<section class="navBarDesktop">

  <figure class="logo">
    <a href="/">
      <img src={imgLogo} alt="Alianza Teatral Conect-arte logo" />
    </a>
  </figure>

  <ul>
    { menuObject.map((item) => (
      <li>
        <a href={item.link}>{item.label}</a>
      </li>
    ))}
  </ul>

</section>


<style lang="sass">
</style>




