---
type MenuItem = {
  label: string;
  link: string;
};

interface menuProp {
  menuObject: MenuItem[];
};

const { menuObject } = Astro.props as menuProp;
const { imgLogo } = Astro.props;
---


<section class="navBarDesktop">

  <figure class="logo-content">
    <a href="/">
      <img src={imgLogo} alt="Alianza Teatral Conect-arte logo" class="logo-img" />
    </a>
  </figure>

  <ul>
    { menuObject.map((item) => (
      <li>
        <a href={item.link}>{item.label}</a>
      </li>
    ))}
  </ul>

</section>


<style lang="sass">
.navBarDesktop
  width: 100%

.logo-content
  margin: 0
  margin-left: 6em
  margin-top: 13px
  padding: 0
  width: 13em
  &:hover
    filter: drop-shadow(0px 0px 1px rgba(255,255,255,0.8))


.logo-img
  padding: 0
  width: 12em
  height: auto

ul
  position: fixed
  top: 1.77em
  right: 8em
  margin: 0
  padding: 0
  
li
  display: inline
  margin: 0
  font-size: 1.1em 

  a
    color: white
    text-decoration: none
    margin: 0
    padding: 1.2em
    padding-top: 2em
    paddin-bottom: 1em
    &:hover
      background-color: rgba(112, 92, 63, 0.85)
      text-shadow: 0px 0px 2px rgba(255,255,255,0.4)

</style>
