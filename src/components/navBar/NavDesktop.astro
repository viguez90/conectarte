---

interface logoProp {
  imgLogo: string;
};

type MenuItem = {
  label: string;
  link: string;
};

interface menuProp {
  menuObject: MenuItem[];
};

const { menuObject } = Astro.props as menuProp;
const { imgLogo } = Astro.props;
---





<section class="navBarDesktop">

  <figure class="logo">
    <a href="/">
      <img src={imgLogo} alt="Alianza Teatral Conect-arte logo" />
    </a>
  </figure>

  <ul>
    { menuObject.map((item) => (
      <li>
        <a href={item.link}>{item.label}</a>
      </li>
    ))}
  </ul>

</section>





<style lang="sass">
.navBarDesktop
  width: 100%
  height: 4em
  margin: 0
  padding: 0

.logo
  width: 12em
  height: 100%
  margin: 0
  margin-top: 10px
  margin-left: 8em
  padding: 0
  float: left
  a
    width: 100%
    height: auto
    item-align: center
  img
    max-width: 100%
    height: auto

ul
  list-style-type: none
  margin: 0
  margin-top: 1.1px
  margin-right: 4em
  padding: 1em
  overflow: hidden
  float: right
  border: 0
  font-size: 1.2em
  li
    display: inline
    padding: 1em
    padding-right: 0.2em
    padding-left: 0.2em
    a
      text-align: center
      text-decoration: none
      color: white
      padding: 1em
    &:hover
      background-color: rgba(140, 111, 73,0.6)

@media (max-width: 1400px)
  ul
    margin: 0
    li
      padding-left: 0
      padding-right: 0

  .logo
    margin-left: 4em
</style>




