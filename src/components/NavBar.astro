---
import NavDesktop from "./navBar/NavDesktop.astro"
import NavMobile from "./navBar/NavMobile.astro"

const imgLogo = 'logo.svg'

const menuObject = [
  {
    label: 'Noticias',
    link: '/',
  },
  {
    label: 'Eventos',
    link: '/tour',
  },
  {
    label: 'Media',
    link: '/media',
  },
  {
    label: 'Blog',
    link: '/blog',
  },
  {
    label: 'Nosotros',
    link: '/about',
  },
  {
    label: 'Contacto',
    link: '/contact'
  },
];
---


<nav class="navBar">
  <div id="navBar-desktop">
    <NavDesktop imgLogo={imgLogo} menuObject={menuObject} />
  </div>

  <div id="navBar-mobile">
    <NavMobile imgLogo={imgLogo} menuObject={menuObject} />
  </div>
</nav>


<style lang="sass">

#navBar-mobile
  display: none

.navBar
  margin: 0
  padding: 0
  backdrop-filter: blur(30px)
  -webkit-backdrop-filter: blur(30px)
  box-shadow: 0px 0px 10px 1px rgba(25,25,25,0.4)
  width: 100%
  height: 4em
  background-color: rgba(64, 52, 39, 0.5)

@media (max-width: 1024px)
  #navBar-mobile
    display: block

  #navBar-desktop
    display: none

</style>
