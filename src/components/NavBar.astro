---
import NavDesktop from "./navBar/NavDesktop.astro"
import NavMobile from "./navBar/NavMobile.astro"

const imgLogo = 'logo.svg'

const menuObject = [
  {
    label: 'Noticias',
    link: '/',
  },
  {
    label: 'Eventos',
    link: '/tour',
  },
  {
    label: 'Media',
    link: '/media',
  },
  {
    label: 'Blog',
    link: '/blog',
  },
  {
    label: 'Nosotros',
    link: '/about',
  },
  {
    label: 'Contacto',
    link: '/contact'
  },
];
---

<nav class="navBar">
  <div id="navBar-desktop">
    <NavDesktop imgLogo={imgLogo} menuObject={menuObject} />
  </div>

  <div id="navBar-mobile">
    <NavMobile />
  </div>
</nav>




<style lang="sass">

#navBar-mobile
  display: none

.navBar
  margin: 0
  padding: 0
  backdrop-filter: blur(30px)
  -webkit-backdrop-filter: blur(30px)
  box-shadow: 0px 0px 30px 2px rgba(0,0,0,0.5)
  position: fixed
  width: 100%
  height: 4em

@media (max-width: 1024px)
  #navBar-mobile
    display: block

  #navBar-desktop
    display: none

</style>
