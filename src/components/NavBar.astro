---
import NavDesktop from "./navBar/NavDesktop.astro"
import NavMobile from "./navBar/NavMobile.astro"

const imgLogo = 'logo.svg'

const menuObject = [
  {
    label: 'Noticias',
    link: '/',
  },
  {
    label: 'Eventos',
    link: '/tour',
  },
  {
    label: 'Nosotros',
    link: '/about',
  },
];
---


<nav class="navBar">
  <div id="navBar-desktop">
    <NavDesktop imgLogo={imgLogo} menuObject={menuObject} />
  </div>

  <div id="navBar-mobile">
    <NavMobile imgLogo={imgLogo} menuObject={menuObject} />
  </div>
</nav>


<style lang="sass">

.navBar
  background-color: rgba(69, 56, 40, 1.0)
  box-shadow: 0px 0px 30px 1px rgba(0,0,0,0.2)
  margin: 0
  padding: 0
  position: fixed
  top: 0
  width: 100%
  z-index: 100
  height: 4.5em

#navBar-mobile
  display: none

@media (max-width: 1024px)
  #navBar-mobile
    display: block

  #navBar-desktop
    display: none

</style>
