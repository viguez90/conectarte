---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
	</head>
	<body>
    <div class="font-default">
      <div class="body-content">
        <div class="content">
          <slot />
        </div>
      </div>
    </div>
	</body>
</html>


<style lang="sass">
@font-face
    font-family: 'anaktoria'
    src: url('/public/fonts/Anaktoria.otf') format('opentype')
    font-weight: normal
    font-style: normal

@font-face
    font-family: 'cardo-regular'
    src: url('/public/fonts/Cardo-Regular.ttf') format('truetype')
    font-weight: normal
    font-style: normal

@font-face
    font-family: 'cardo-italic'
    src: url('/public/fonts/Cardo-Italic.ttf') format('truetype')
    font-weight: normal
    font-style: normal

@font-face
    font-family: 'cardo-bold'
    src: url('/public/fonts/Cardo-Bold.ttf') format('truetype')
    font-weight: normal
    font-style: normal

.font-default
  font-family: 'cardo-bold'

html
  color: black

body
  background: #db862b
  background-repeat: no-repeat
  background-attachment: fixed
  background-size: cover
  margin: 0


.body-content
  backdrop-filter: blur(60px)
  width: 94%
  height: 100vh
  margin: auto
  margin-top: 1em
  padding-bottom: 0
  margin-bottom: 0

.content
  width: 98%
  max-height: 90vh
  background: rgba(0,0,0,0.1)
  margin: auto
  padding: 14px
  margin-left: 1em

@media (max-width: 600px)
  .content
    width: 90%
    padding: 10px
    font-size: 14px

  .bg-return
    a
      font-size: 1.2em


</style>
